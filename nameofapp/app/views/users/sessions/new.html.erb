<%= form_for(resource, as: resource_name, url: session_path(resource_name,), html: {class: "form-signing signin"}) do |f| %>
  <h2 class="form-signing-heading">Please sign in</h2>
  <div class="field form-group">
    <%= f.label :email, class:"sr-only"%><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email adress" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class:"sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions form-group">
    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
  </div>

<% end %>
    <%= render "devise/shared/links" %>  

