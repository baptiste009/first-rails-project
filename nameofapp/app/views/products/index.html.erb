<p id="notice"><%= notice %></p>

<h1>My products</h1>

<table class"product-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td id="show"><%= link_to 'Show', product %></td>
        <td id="edit"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td id="destroy"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class ="add-new-product">
  <%= link_to 'New Product', new_product_path %>
</div>
