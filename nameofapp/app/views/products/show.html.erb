<p id="notice"><%= notice %></p>

<div class="product-information container-fluid">
	<div class="row">
		<div class ="product-image col-md-6" >
			<%= image_tag(@product.image_url,:class=>"img-responsive") %>
		</div>
		<div class="product-name-show col-md-6">
		 	<h3><%= @product.name %></h3>
		</div>
		<div class="product-price col-md-6">
			<span class="lead"><%= @product.price %></span>
	 		<span class="lead glyphicon glyphicon-eur"></span>
		</div>
		<div class="product-description col-md-6">
	  		<%= @product.description %>
		</div>
		<div class="product-color col-md-6">
	  		<%= @product.colour %>
		</div>
		<div class="product-rating col-md-6">
			<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
		</div>
		</div>

	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
	<%= render partial: 'shared/new_comment' %>
	<%= render partial: 'shared/comments' %>
	<%= will_paginate @comments %>
</div>
