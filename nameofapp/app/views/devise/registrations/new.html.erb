<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-signing signup"}) do |f| %>
  <%= devise_error_messages! %>
  <h2>Sign up</h2>

  <div class="field form-group">
    <%= f.label :first_name, class:"sr-only" %><br />
    <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder:"First name" %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, class:"sr-only" %><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control", placeholder:"Last name" %>
  </div>

  <div class="field form-group">
    <%= f.label :email, class:"sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email adress" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"sr-only" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confrim password" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
